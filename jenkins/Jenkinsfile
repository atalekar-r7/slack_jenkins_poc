// ðŸ”¹ Webhook trigger for multibranch
properties([
  pipelineTriggers([
    [
      $class: 'GenericTrigger',
      token: 'crewai-slack-trigger-very-long-random-token-9x82hd92hd92',
      causeString: 'Triggered by Slack Approval',
      printContributedVariables: true,
      printPostContent: true,
      
      // Extract query parameters from webhook URL
      genericVariables: [
        [key: 'APP_NAME', value: '$.APP_NAME', expressionType: 'JSONPath', defaultValue: 'my-app'],
        [key: 'VERSION', value: '$.VERSION', expressionType: 'JSONPath', defaultValue: '1.0.0']
      ],
      
      // Also support query parameters directly
      genericRequestVariables: [
        [key: 'APP_NAME', regexpFilter: ''],
        [key: 'VERSION', regexpFilter: '']
      ]
    ]
  ])
])



pipeline {
    agent any

    parameters {
        string(name: 'APP_NAME', defaultValue: 'my-app', description: 'Name of the application')
        string(name: 'VERSION', defaultValue: '1.0.0', description: 'Version to deploy')
    }

    stages {
        stage('Build') {
            steps {
                echo "Building... App: ${params.APP_NAME}, Version: ${params.VERSION}"
            }
        }
        stage('Test') {
            steps {
                echo "Testing... App: ${params.APP_NAME}, Version: ${params.VERSION}"
            }
        }
        stage('Deliver') {
            steps {
                echo "Delivering... App: ${params.APP_NAME}, Version: ${params.VERSION}"
            }
        }
    }
}
